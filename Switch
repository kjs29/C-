Syntax for switch

Switch (expression) {
  case x:
    //codeblock to be executed if expression is x
    break;
  case y:
    //codeblock to be executed if expression is not x, and expression is y
    break;
  case z:
    //codeblock to be executed if expression is not x,y, and expression is z
    break;
  default:
    //codeblock to be executed if expression is not x,y,z
    break;
}

---
#include <iostream>
using namespace std;

int main () {
  int a;
  switch (a) {
    case 1:
      cout << "a is 1";
      break;
    case 2:
      cout << "a is 2";
      break;
    case 3:
      cout << "a is 3";
      break;
    default:
      cout << "no idea";
      break;
  }
  return 0;
}

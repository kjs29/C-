//Building a basic calculator

#include <iostream>
using namespace std;

int main () {
	char op;
	int a,b;
	
	cout << "Enter first number: ";
	cin>> a;
	cout << "Enter second number: ";
	cin>>b;
	cout << "Enter operator: ";
	cin>>op;
	if (op == '+') {
		cout<<a+b;
	} else if (op=='-'){
		cout<<a-b;
	} else if (op=='*'){
		cout<<a*b;
	} else if (op=='/'){
		cout<<a/b;
	} else {
		cout<<"Invalid operator.\n";
	}

	return 0;
	
	
}

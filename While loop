//Syntax for while is as follows

while (condition) {
	
	codeblock to be executed if condition is true
}


#include <iostream>

int i = 0;
while (i<5) {
	cout << i;
	i++;
}

---example

#include <iostream>
using namespace std;

int main () {
	int i = 0;
	while (i<5) {
		cout << i;
		i++;
	}
}

---example
//use break to get out of the while loop

#include <iostream>

using namespace std;

int main () {
	
	
	int number = 0;
	while (number <10) {
		
		cout << number;
		number++;
	if (number==6) {
		break;
	}
	}
	return 0;
}

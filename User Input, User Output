//simple user output(print)

#include <iostream>

using namespace std;
int main() {
  int age = 29;
  cout << age;
  return 0;
}

---
//simple user input

#include <iostream>

using namespace std;
int main () {
	int age;						//we always store a variable before we get user input.
	cout << "Enter your age : ";
	cin >> age; //pronounced as see-in
	cout << "Your age is " << age;
	return 0;
}

---
//Creating a simple calculator that gets the sum of two input numbers
#include <iostream>
using namespace std;
int main () {
  int firstNum;
  int secondNum;
  cout << "Print out the first number : ";
  cin >> firstNum\n;
  cout << "Print out the second number : ";
  cin >> secondNum\n;
  cout << "Your result is " << firstNum + secondNum;
  return 0;
}

---
//Creating a simple calculator that gets the sum of two input numbers
#include <iostream>
using namespace std;
int main () {
  int firstNum;
  int secondNum;
  cout << "Print out the first number : ";
  cin >> firstNum;
  cout << "Print out the second number : ";
  cin >> secondNum;
  sum = firstNum + secondNum;         //In this case , we made another variable 'sum' that is the sum of firstNum and secondNum.
  cout << "Your result is " << sum;
  return 0;
}

---
//to use user input for strings
//we don't use cin because the compiler terminates the program when there's a whitespace, cin only displays the first word.

#include <iostream>

using namespace std;
int main () {
	
	string name;
	cout << "What is your name ?";
	getline(cin, name);
	cout << "Your name is: " << name;
	return 0;
	
}

---example
//Madlibs game
#include <iostream>

using namespace std;
int main () {
	string color,pluralNoun,celebrity;
	
	cout<<"Name a color : ";
	getline(cin,color);
	
	cout<<"Name a pluralNoun : ";
	getline(cin,pluralNoun);
	
	cout<<"Name a celebrity : ";
	getline(cin,celebrity);
	
	cout << "Rosese are " << color << "\n";
	cout << pluralNoun << " are blue"<< "\n";
	cout << "I love " << celebrity << "\n";
	
	return 0;
}

//usage of break
//we use break to get out of loop.
#include <iostream>

using namespace std;

int main () {
	
	for (int i = 1;i <= 10; i++) {
		if (i>8) {
			break;
		}
		cout << "Hello World"<< i<<"\n";
	}
	
	return 0;
}

---
//usage of continue
//we use continue to skip the iteration.

#include <iostream>

using namespace std;

int main () {
	
	for (int i = 1; i <= 10; i++) {
		if (i==5) {
			continue;
		}
		cout << "Hello World"<< i<<"\n";
	}
	
	return 0;
}
